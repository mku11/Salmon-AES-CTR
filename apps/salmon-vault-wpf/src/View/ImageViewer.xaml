<Window x:Class="Salmon.Vault.View.ImageViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Salmon.Vault.View"
        xmlns:viewmodel="clr-namespace:Salmon.Vault.ViewModel"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Image Viewer" Height="450" Width="800"
        Background="{StaticResource SalmonBackground}">
    <Window.DataContext>
        <viewmodel:ImageViewerViewModel/>
    </Window.DataContext>
    <Image HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
           Source="{Binding ImageSource}"> 
        
    </Image>
</Window>
