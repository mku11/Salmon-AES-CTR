<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/SalmonPrefCat" >

		<!-- TODO: add the path of the vault in the summary -->
        <Preference
            android:key="vaultLocation"
            android:summary="@string/VaultLocationSummary"
            android:title="@string/VaultLocationTitle" />

        <Preference
            android:key="changePassword"
            android:summary="@string/ChangePasswordSummary"
            android:title="@string/ChangePasswordTitle" />

        <CheckBoxPreference
            android:key="deleteAfterImport"
            android:summary="@string/DeleteSourceFilesAfterImport"
            android:title="@string/DeleteFilesAfterImport" />

        <ListPreference
            android:key="aesType"
            android:summary="@string/AESEncryptionImplementation"
            android:title="@string/AESImplementation"
            android:entryValues="@array/AESImplValues"
            android:entries="@array/AESImplEntries"
            android:defaultValue="@string/Default"
            />

        <ListPreference
            android:key="pbkdfType"
            android:summary="@string/PBKDFHashImplementation"
            android:title="@string/PBKDFImplementation"
            android:entryValues="@array/PBKDFImplValues"
            android:entries="@array/PBKDFImplEntries"
            android:defaultValue="@string/Default"
            />

        <CheckBoxPreference
            android:key="enableLog"
            android:summary="@string/EnableLog"
            android:title="@string/EnableLog" />

        <CheckBoxPreference
        android:key="enableLogDetails"
        android:summary="@string/EnableLogDetails"
        android:title="@string/EnableLogDetails" />

        <CheckBoxPreference
            android:key="excludeFromRecents"
            android:summary="@string/ExcludeFromRecents"
            android:title="@string/ExcludeFromRecents" />

    </PreferenceCategory>
</PreferenceScreen>