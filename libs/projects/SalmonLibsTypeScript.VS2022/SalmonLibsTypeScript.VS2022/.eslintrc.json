{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "tsconfig.json",
    "tsconfigRootDir": "./"
  },
  "plugins": [ "@typescript-eslint", "import" ],
  "root": true,
  "extends": "eslint:recommended",
  "rules": {
    // Add rules here
    "import/no-cycle": [
      "error",
      {
        "maxDepth": 10,
        "ignoreExternal": true
      }
    ],
    "@typescript-eslint/no-floating-promises": [ "error" ]
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "ignorePatterns": [ "**/node_modules/**" ]
}