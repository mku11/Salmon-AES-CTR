<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="false"
        tools:replace="android:icon,android:theme">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".main.TextActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".main.DataActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".main.DataStreamActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".main.FileActivity"
            android:screenOrientation="portrait">
        </activity>


        <activity
            android:name=".main.HttpDriveActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".main.LocalDriveActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".main.WebServiceDriveActivity"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>