<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <RootNamespace>Salmon</RootNamespace>
    <AssemblyName>Salmon</AssemblyName>
    <Configurations>Debug;Release;Debug Profiling</Configurations>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
    <ErrorReport>none</ErrorReport>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <DefineConstants>TRACE;DEBUG</DefineConstants>
    <Optimize>false</Optimize>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug Profiling|AnyCPU'">
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
    <ErrorReport>none</ErrorReport>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <DefineConstants>TRACE;DEBUG;ENABLE_TIMING; ENABLE_TIMING_DETAIL</DefineConstants>
    <Optimize>true</Optimize>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\..\..\..\csharp\src\salmon\Salmon\BitConverter.cs" Link="salmon\Salmon\BitConverter.cs" />
    <Compile Include="..\..\..\..\csharp\src\salmon\Salmon\SalmonEncryptor.cs" Link="salmon\Salmon\SalmonEncryptor.cs" />
    <Compile Include="..\..\..\..\csharp\src\salmon\Salmon\SalmonGenerator.cs" Link="salmon\Salmon\SalmonGenerator.cs" />
    <Compile Include="..\..\..\..\csharp\src\salmon\Salmon\SalmonIntegrity.cs" Link="salmon\Salmon\SalmonIntegrity.cs" />
    <Compile Include="..\..\..\..\csharp\src\salmon\Salmon\SalmonSecurityException.cs" Link="salmon\Salmon\SalmonSecurityException.cs" />
    <Compile Include="..\..\..\..\csharp\src\salmon\Salmon\SalmonTextEncryptor.cs" Link="salmon\Salmon\SalmonTextEncryptor.cs" />
    <Compile Include="..\..\..\..\csharp\src\salmon\Salmon\SalmonTime.cs" Link="salmon\Salmon\SalmonTime.cs" />
    <Compile Include="..\..\..\..\csharp\src\salmon\Streams\AbsStream.cs" Link="salmon\Streams\AbsStream.cs" />
    <Compile Include="..\..\..\..\csharp\src\salmon\Streams\SalmonStream.cs" Link="salmon\Streams\SalmonStream.cs" />
    <Compile Include="..\..\..\..\csharp\src\salmon\Transformers\SalmonAES.cs" Link="salmon\Transformers\SalmonAES.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Cryptography.KeyDerivation" Version="6.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="salmon\Salmon\" />
    <Folder Include="salmon\Streams\" />
    <Folder Include="salmon\Transformers\" />
  </ItemGroup>

</Project>
