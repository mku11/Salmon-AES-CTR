<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#222222"
    android:padding="2dp">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbarLayout"
        style="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbarLayout"
        android:ellipsize="start"
        android:gravity="center"
        android:padding="2dp"
        android:text="salmonfs://"
        android:textColor="#FFFFFF" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        tools:listitem="@layout/file_item"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/path"
        app:layout_constraintBottom_toTopOf="@id/status_control_layout"
        android:layout_alignParentBottom="true" />

    <RelativeLayout
        android:id="@+id/status_control_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/fileProgress"
            android:ellipsize="start"
            android:maxLines="3"
            android:text="Status"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Salmon.Droid.Main.PieProgress
            android:id="@+id/fileProgress"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toLeftOf="@id/filesProgress" />

        <Salmon.Droid.Main.PieProgress
            android:id="@+id/filesProgress"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>